"-------------------------------------------------------------------------------
" Install / load plugin
"-------------------------------------------------------------------------------
Plug 'jistr/vim-nerdtree-tabs', { 'depends': 'scrooloose/nerdtree' }

"-------------------------------------------------------------------------------
" Settings
"-------------------------------------------------------------------------------
let g:nerdtree_tabs_startup_cd = 0
let g:NERDTreeWinSize = 50
let NERDTreeHijackNetrw=1

"-------------------------------------------------------------------------------
" Functions
"-------------------------------------------------------------------------------
"-------------------------------------------------------------------------------
" Keybindings
"-------------------------------------------------------------------------------
nmap <Leader>f <plug>NERDTreeTabsToggle<CR>
