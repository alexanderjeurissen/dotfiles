# preprompt, the generation of the lines is based on 
# https://github.com/chauncey-garrett/zsh-prompt-garrett
_generate_preprompt() {
  host_name=$(_hostname)
  user_name=$(_username)
  local pre_prompt_content

  (($host_name)) && pre_prompt_content+="$host_name"
  (($user_name)) && pre_prompt_content+="$user_name"

  # store working_tree without the "x" prefix
  local working_tree="${vcs_info_msg_1_#x}"

  # construct prompt, beginning with path (only shows last two segments of ptah)
  pre_prompt_content+="%F{blue}ï¼ %(3~|%2~|%~)%f"

  # get git info
  if [[ -n $working_tree ]]; then
    pre_prompt_content+="${vcs_info_msg_0_}"
  fi

  print -P "\nâ•­â”€ ${pre_prompt_content}"
}

_generate_prompt() {
  # check that no command is currently running, 
  # the preprompt will otherwise be rendered in the wrong place

  # usefull symbols:
  #â”€
  #î‚¢
  #î˜™
  #î•
  #îœ»
  #ï€•
  #ğŸ’©
  #ï…‹
  #ï…Š
  #ï€£
  #ï©
  #ï‚£
  #ï³
  #ï‚±
  #ïƒ
  #ïƒ²
  #ïƒº
  #ï„
  #ï…¸
  #ï‡«
  #ïˆ›
  #ï’’
  #ï’
  #ï‘®
  # ï‘

  # exit code (first uses sad/smile face the other checkmark/cross
  # exit_code="%(?.%F{green}ï„˜%f.%F{red}ï„™%f)"
  exit_code="%(?.%F{green}ï˜â”€ï‘%f.%F{red}ï—â”€ï‘%f)"
  # exit_code="%(?.%F{green}â—%f.%F{red}â—%f)"
  # exit_code="%(?.%F{green}ï€Œ.%F{red}ï€%f) "

  PROMPT="â•°${exit_code}"

  RPROMPT="%F{243}%*%f"
}

prompt_snappy_setup() {
  # prevent percentage showing up
  # if output doesn't end with a newline
  export PROMPT_EOL_MARK=''
  setopt prompt_subst

  zmodload zsh/datetime
  zmodload zsh/zle
  autoload -Uz add-zsh-hook
  autoload -Uz vcs_info
  zstyle ':vcs_info:git*' stagedstr '%F{green}âœš%f'
  zstyle ':vcs_info:git*' unstagedstr '%F{cyan}ï© %f'
  zstyle ':vcs_info:*' check-for-changes true
  zstyle ':vcs_info:*' get-revision true
  zstyle ':vcs_info:git*' formats ' îœ¥ %0.40b %f%m%u%c' 'x%R'
  zstyle ':vcs_info:git*' actionformats ' îœ¥ %0.20b%f %F{magenta}îœ© %0.7i%f %F{red}îœ¨ %a%f' 'x%R'
  zstyle ':vcs_info:git*+set-message:*' hooks git-st git-stash git-untracked
  zstyle ':vcs_info:*' enable git
  # zstyle ':vcs_info:*+*:*' debug true

  add-zsh-hook precmd vcs_info
  add-zsh-hook precmd _generate_preprompt # generate preprompt
  add-zsh-hook precmd _generate_prompt # generate prompt
}

prompt_snappy_setup "$@"
