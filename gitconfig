[alias]
  ctags = !.git/hooks/ctags

[color]
  ui = auto

[core]
  excludesfile = /Users/alexanderjeurissen/.gitignore
  editor = nvim
  ; editor = nvr -cc tabnew --remote-wait-silent
  pager = delta
  attributesfile = ~/.gitattributes

[credential]
  helper = cache --timeout=36000

[delta]
  line-numbers = true
  line-numbers-minus-style = "red"
  line-numbers-plus-style = "green"
  line-numbers-zero-style = "brightyellow"
  file-style = "bold white"
  syntax-theme = "Solarized (dark)"

[diff]
  tool = nvim

[difftool "nvim"]
  cmd= nvim -d $REMOTE $LOCAL

[difftool "nvr"]
  cmd = nvr -s -d $LOCAL $REMOTE

[difftool]
  prompt = 1

[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true

[github]
  user = alexanderjeurissen

[init]
  templatedir = ~/.git_template

[interactive]
  diffFilter = delta --color-only

[merge "merge-structure-sql"]
  name = Rails structure.sql merge driver
  driver = git-merge-structure-sql %A %O %B

[merge]
  tool = nvim
  conflictstyle = diff3

[mergetool "nvim"]
  cmd = nvim -d $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'

[mergetool "nvr"]
  cmd = nvr -cc tabnew -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='

[mergetool]
  prompt = 0

[pull]
  rebase = false

[push]
  default = current

[user]
  name = Alexander Jeurissen
  email = 1220084+alexanderjeurissen@users.noreply.github.com
