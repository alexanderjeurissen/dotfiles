[
  {
    "clean": [
      "~",
      "~/.git_template"
    ]
  },
  {
    "dependencies": [
      { "name": "git", "cmd": "brew install git" }
    ]
  },
  {
    "link": {
      "~/.git_template": {
        "create": true,
        "relink": true
      },
      "~/.gitconfig": {
        "relink": true
      },
      "~/.gitaliases": {
        "relink": true
      },
      "~/.gitignore": {
        "relink": true
      }
    }
  }
]
