[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --abbrev-commit --date=relative
  lgo = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %Cblue<%an>%Creset' --date=relative
  who = blame
  sup = "submodule update --remote --merge"

  ; diff aliases
  diffFiles = diff --name-only

  ; push/commit aliases
  aa = add -A
  unadd = reset HEAD

  ; stash aliases
  stash = stash -u

  ;files changed between two commits
  changes = "log --name-only --pretty=oneline --full-index $1..$2 | grep -vE '^[0-9a-f]{40} ' | sort | uniq"
	up = pull --rebase --autostash
  upb = "!git fetch -pP  && git merge develop origin/develog kkjp"
  ctags = !.git/hooks/ctags

[diff]
  tool = nvim
[difftool "nvim"]
  cmd= nvim -d $REMOTE $LOCAL
[difftool "nvr"]
  cmd = nvr -s -d $LOCAL $REMOTE
[difftool]
  prompt = 1

[merge]
  tool = nvim
  conflictstyle = diff3
[mergetool "nvim"]
  cmd = nvim -d $BASE $REMOTE $LOCAL $MERGED -c '$wincmd w' -c 'wincmd J' -c '$wincmd w' -c 'wincmd k'
[mergetool "nvr"]
  cmd = nvr -cc tabnew -s -d $LOCAL $BASE $REMOTE $MERGED -c 'wincmd J | wincmd ='
[mergetool]
  prompt = 0

