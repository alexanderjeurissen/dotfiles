set from = "alexander@jeurissen.email"
set sendmail = "/usr/local/bin/msmtp -a personal"

# Set folders
set spoolfile = "+personal/INBOX"
set mbox = "+personal/archive"
# set postponed = "+personal/drafts"
set record = "+personal/sent"
set trash = "+personal/trash"
# set spam = "+personal/spam"

color status black color250

macro index o "<shell-escape>mbsync personal_imp<enter>" "run mbsync to sync mail for this account"
macro index O "<shell-escape>mbsync personal<enter>" "run mbsync to sync mail for this account"

