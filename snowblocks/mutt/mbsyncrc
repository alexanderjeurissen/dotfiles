#################################
######## Account personal #######
#################################
IMAPAccount personal
Host 127.0.0.1
Port 1143
User alexander@jeurissen.email
PassCmd "security find-generic-password -s '127.0.0.1' -a 'personal_email' -w"
# SSLType NONE
SSLType STARTTLS
SSLVersions TLSv1.2
CertificateFile ~/.cert/personal_email.crt

# NOTE: command to generate a cert file:
# openssl s_client -starttls imap -connect 127.0.0.1:1143 -showcerts
# NOTE: Put the everything from "-----BEGIN CERTIFICATE-----" and "-----END CERTIFICATE-----" in the file.

# Remote storage
IMAPStore personal-remote
Account personal

# Local storage
MaildirStore personal-local
Path ~/Mail/personal/
Inbox ~/Mail/personal/INBOX

# INBOX
Channel personal-inbox
Master :personal-remote:
Slave :personal-local:
Patterns "INBOX"
Create Both
Expunge Both
SyncState *

# SENT
Channel personal-sent
Master :personal-remote:"Sent"
Slave :personal-local:"sent"
Create Both
Expunge Both
SyncState *

# ARCHIVE
Channel personal-archive
Master :personal-remote:"Archive"
Slave :personal-local:"archive"
Create Both
Expunge Both
SyncState *

# TRASH
Channel personal-trash
Master :personal-remote:"Trash"
Slave :personal-local:"trash"
Create Both
Expunge Both
SyncState *

Group personal
Channel personal-inbox
Channel personal-sent
Channel personal-trash
Channel personal-archive
